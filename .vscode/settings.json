{
    "prettier.ignorePath": "./client/.prettierignore",
    "prettier.packageManager": "yarn",
    "prettier.configPath": "./client/.prettierrc.json",
    "prettier.prettierPath": "./client/node_modules/prettier",
    "prettier.requireConfig": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.useEditorConfig": false,
    "eslint.alwaysShowStatus": true,
    "eslint.workingDirectories": [
        "./client"
    ],
    "json.schemas": [
        {
            "fileMatch": [
                "/client/.eslintrc*.json"
            ],
            "url": "./client/schemas/eslintrc.json"
        },
        {
            "fileMatch": [
                "/client/.prettierrc*.json"
            ],
            "url": "./client/schemas/prettierrc.json"
        }
    ]
}